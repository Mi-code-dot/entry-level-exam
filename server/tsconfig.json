{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false, // Allow implicit 'any' types
    "strictNullChecks": false, // Allow null and undefined in more cases
    "noImplicitThis": false, // Allow 'this' to be implicitly 'any'
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
	"noEmit": true
  },
  "include": [
	  "types.d.ts",
	  "*.ts"
	]
}
